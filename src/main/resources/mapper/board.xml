<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fastcampus.admin.board.BoardRepository">
    <select id="findById" resultType="com.fastcampus.admin.board.Board">
        select * from board_tb where id = #{id}
    </select>
    <select id="findAll" resultType="com.fastcampus.admin.board.Board">
        select * from board_tb
    </select>
    <select id="findByUserId">
        select count(*) from board_tb where user_id = #{userId}
    </select>
    <delete id="deleteById">
        delete from board_tb where id = #{id}
    </delete>
    <update id="updateById" >
        update board_tb set hide = #{hide}, state = #{state} where id = #{id}
    </update>
    <update id="updateStateByBoardId" >
        update board_tb set state = #{state} where id = #{boardId}
    </update>
    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into board_tb (title, content, userId, createdAt) values (#{title}, #{content}, #{userId}, now())
    </insert>
</mapper>
